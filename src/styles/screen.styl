@require './variables.styl'
@require './vendor/*'

global-reset()
reset-html5()

*
  box-sizing border-box

body
  df()
  background c-app-bg
  -webkit-text-size-adjust 100%

#app
  padding-top 3rem
  display flex
  flex-flow column nowrap
  min-height 100vh

.app-content
  flex 1

a
  color link
  text-decoration none

body, input, button, textarea
  font-size x
  line-height 1.5
  font-family sans

strong
  font-weight 600

em
  font-style italic

.ni-page-header
  border-bottom none !important

.hidden 
  position absolute
  left -10000px
  top auto
  width 1px
  height 1px
  overflow hidden

.page-user .ni-form
  margin 0 auto

@media screen and (min-width: 1024px)
  .mobile-only
    display none
